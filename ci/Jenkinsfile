pipeline {
  agent any
  stages {
    stage('Setup') {
      steps {
        sh '''chmod +x ./scripts/docker-setup.sh
sh ./scripts/docker-setup.sh'''
      }
    }

    stage('Clean') {
      steps {
        sh '''chmod +x ./scripts/docker-clean.sh
sh ./scripts/docker-clean.sh'''
      }
    }

    stage('Initial') {
      agent {
        docker {
          image 'hashicorp/terraform:latest'
          args '--entrypoint='
        }

      }
      steps {
        sh 'terraform version'
      }
    }

  }
}