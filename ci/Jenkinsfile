pipeline {
  agent any
  stages {
    stage('Build & Test App') {
      steps {
        sh '''chmod +x ./scripts/docker-setup.sh
sh ./scripts/docker-setup.sh'''
      }
    }

    stage('Clean App') {
      steps {
        sh '''chmod +x ./scripts/docker-clean.sh
sh ./scripts/docker-clean.sh'''
      }
    }

    stage('Zip App') {
      agent any
      steps {
        sh '''chmod +x ./scripts/app-source-zip.sh
sh ./scripts/app-source-zip.sh'''
      }
    }

    stage('Update GitHub') {
      steps {
        git(url: 'https://github.com/KhangTGR/game-docker-deployment', branch: 'main', changelog: true)
        sh '''git add source/*
git commit -m "The Application run successfully!"
git push'''
      }
    }

  }
}